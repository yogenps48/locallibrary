extends layout

block content
    h1 #{title}: #{genre.name}
    hr
    if books.length
        div(style='margin-left:20px;margin-top:20px;')
            p #[strong Delete the following books first:]
            dl
                each book in books
                    dt
                        a(href=book.url) #{book.title}
                    dd #{book.summary}


    else
        p Do you really want to delete this Genre?
        form(method='POST' action='')
            div.form-group
                input#genreid.form-control(type='hidden' required='true' name='genreid' value=genre._id)
            button.btn.btn-primary(type='submit') Delete
